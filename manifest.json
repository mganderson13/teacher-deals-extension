{
  "manifest_version": 3,
  "name": "Teacher Deals",
  "version": "1.0",
  "description": "This extension checks for deals while you shop!",
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "css": ["styles/banner.css"],
      "matches": ["<all_urls>"]
    }
  ],
    "web_accessible_resources": [
    {
      "resources": ["data/deals.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}