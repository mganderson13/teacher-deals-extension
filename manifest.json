{
  "manifest_version": 3,
  "name": "Deal Finder for Community Heroes",
  "version": "0.0.0.1",
"icons": {
  "16": "icons/icon16.png",
  "48": "icons/icon48.png",
  "128": "icons/icon128.png"
},
"action": {
  "default_icon": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
},
  "description": "This extension checks if websites you visit offer Community Hero deals through Sheer ID.",
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "css": ["styles/banner.css"],
      "matches": ["<all_urls>"]
    }
  ],
    "web_accessible_resources": [
    {
      "resources": ["data/deals.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  }
}